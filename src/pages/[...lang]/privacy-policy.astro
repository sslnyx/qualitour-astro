---
import Layout from "../../layouts/Layout.astro";
import PageHero from "../../components/PageHero.astro";
import { type Locale } from "../../i18n/config";

// Generate paths for both locales
export function getStaticPaths() {
    return [
        { params: { lang: undefined } }, // English: /privacy-policy
        { params: { lang: "zh" } }, // Chinese: /zh/privacy-policy
    ];
}

const { lang } = Astro.params;
const currentLang: Locale = (lang as Locale) || "en";
const localePrefix = currentLang === "en" ? "" : `/${currentLang}`;

// Policy sections with Material Icons
const policySections = [
    {
        id: "information-collect",
        icon: "description",
        title: "Information We Collect",
    },
    {
        id: "how-we-use",
        icon: "settings",
        title: "How We Use Your Information",
    },
    { id: "sharing", icon: "share", title: "Information Sharing" },
    { id: "your-rights", icon: "verified_user", title: "Your Rights" },
    { id: "contact", icon: "mail", title: "Contact Us" },
];

const deviceInfoItems = [
    { label: "Browser Information", desc: "Your web browser type and version" },
    { label: "IP Address", desc: "Your device's Internet Protocol address" },
    {
        label: "Cookies",
        desc: "Data files placed on your device to enhance your experience",
    },
    {
        label: "Usage Data",
        desc: "Pages visited, time spent, and interaction patterns",
    },
];

const bookingInfoItems = [
    { label: "Contact Details", desc: "Name, email address, and phone number" },
    {
        label: "Travel Information",
        desc: "Preferred dates, destinations, and group size",
    },
    {
        label: "Payment Information",
        desc: "Billing details (processed securely via third-party providers)",
    },
    {
        label: "Special Requirements",
        desc: "Dietary needs, accessibility requirements, etc.",
    },
];

const usageItems = [
    {
        icon: "flight",
        title: "Fulfill Your Bookings",
        desc: "Process tour reservations, arrange itineraries, and provide booking confirmations.",
    },
    {
        icon: "chat",
        title: "Communicate With You",
        desc: "Send booking updates, respond to inquiries, and provide customer support.",
    },
    {
        icon: "trending_up",
        title: "Improve Our Services",
        desc: "Analyze usage patterns to enhance our website and tour offerings.",
    },
    {
        icon: "security",
        title: "Protect Against Fraud",
        desc: "Screen transactions for potential risk and ensure secure operations.",
    },
];

const sharingItems = [
    {
        icon: "confirmation_number",
        title: "Booking Partners",
        desc: "We work with tour operators and booking platforms to fulfill your travel arrangements.",
    },
    {
        icon: "analytics",
        title: "Analytics Services",
        desc: "We use Google Analytics to understand how visitors use our Site.",
    },
    {
        icon: "gavel",
        title: "Legal Requirements",
        desc: "We may disclose information when required by law or to protect our rights.",
    },
];

const rightsItems = [
    {
        icon: "visibility",
        title: "Right to Access",
        desc: "Request a copy of your data",
    },
    {
        icon: "edit",
        title: "Right to Correct",
        desc: "Update inaccurate information",
    },
    { icon: "delete", title: "Right to Delete", desc: "Request data removal" },
    {
        icon: "block",
        title: "Right to Opt-Out",
        desc: "Unsubscribe from marketing",
    },
];
---

<Layout
    title={currentLang === "zh"
        ? "隐私政策 | Qualitour"
        : "Privacy Policy | Qualitour"}
    description={currentLang === "zh"
        ? "Qualitour隐私政策 - 了解我们如何收集、使用和保护您的个人信息。"
        : "Qualitour Privacy Policy - Learn how we collect, use, and protect your personal information."}
    lang={currentLang}
>
    <!-- Hero Section -->
    <PageHero
        image="/privacy-hero.png"
        title="Privacy Policy"
        subtitle="We are committed to protecting your personal information and being transparent about how we use it."
        badge={{ icon: "lock", text: "Your Privacy Matters" }}
    >
        <p class="text-white/50 text-sm mb-10">
            Last updated: December 15, 2024
        </p>

        <!-- Quick Jump Links -->
        <div class="flex flex-wrap justify-center gap-3">
            {
                policySections.map((section) => (
                    <a
                        href={`#${section.id}`}
                        class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-sm text-white rounded-full text-sm font-medium border border-white/10 hover:bg-white/20 transition-all"
                    >
                        <span class="material-icons text-base">
                            {section.icon}
                        </span>
                        <span>{section.title}</span>
                    </a>
                ))
            }
        </div>
    </PageHero>

    <!-- Policy Content -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto">
                <!-- Introduction Card -->
                <div class="bg-white rounded-2xl shadow-lg p-8 mb-12">
                    <p class="text-lg text-gray-700 leading-relaxed">
                        This Privacy Policy describes how <strong
                            class="text-gray-900"
                            >Qualitour Travel & Tour Experiences</strong
                        > ("we", "us", or "our") collects, uses, and shares your personal
                        information when you visit our website at{" "}
                        <a
                            href="https://www.qualitour.ca"
                            class="text-[#f7941e] hover:text-[#e68a1c] font-medium"
                            >www.qualitour.ca</a
                        > (the "Site") or use our tour booking services.
                    </p>
                </div>

                <!-- Section 1: Information We Collect -->
                <div id="information-collect" class="scroll-mt-24 mb-12">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="w-14 h-14 bg-gradient-to-br from-[#f7941e] to-[#ff6b35] rounded-xl flex items-center justify-center shadow-lg shadow-orange-200/50"
                        >
                            <span class="material-icons text-white text-2xl"
                                >description</span
                            >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-gray-900"
                        >
                            Information We Collect
                        </h2>
                    </div>
                    <div class="bg-white rounded-2xl shadow-lg p-8">
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">
                            Device Information
                        </h3>
                        <p class="text-gray-600 mb-4">
                            When you visit our Site, we automatically collect
                            certain information about your device, including:
                        </p>
                        <ul class="space-y-3 mb-8">
                            {
                                deviceInfoItems.map((item) => (
                                    <li class="flex items-start gap-3">
                                        <span class="material-icons text-[#f7941e] text-lg mt-0.5">
                                            check_circle
                                        </span>
                                        <span class="text-gray-700">
                                            <strong class="text-gray-900">
                                                {item.label}:
                                            </strong>{" "}
                                            {item.desc}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>

                        <h3 class="text-xl font-semibold text-gray-900 mb-4">
                            Booking Information
                        </h3>
                        <p class="text-gray-600 mb-4">
                            When you make a booking inquiry or purchase, we
                            collect:
                        </p>
                        <ul class="space-y-3">
                            {
                                bookingInfoItems.map((item) => (
                                    <li class="flex items-start gap-3">
                                        <span class="material-icons text-[#f7941e] text-lg mt-0.5">
                                            check_circle
                                        </span>
                                        <span class="text-gray-700">
                                            <strong class="text-gray-900">
                                                {item.label}:
                                            </strong>{" "}
                                            {item.desc}
                                        </span>
                                    </li>
                                ))
                            }
                        </ul>
                    </div>
                </div>

                <!-- Section 2: How We Use Your Information -->
                <div id="how-we-use" class="scroll-mt-24 mb-12">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="w-14 h-14 bg-gradient-to-br from-[#f7941e] to-[#ff6b35] rounded-xl flex items-center justify-center shadow-lg shadow-orange-200/50"
                        >
                            <span class="material-icons text-white text-2xl"
                                >settings</span
                            >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-gray-900"
                        >
                            How We Use Your Information
                        </h2>
                    </div>
                    <div class="bg-white rounded-2xl shadow-lg p-8">
                        <div class="grid md:grid-cols-2 gap-6">
                            {
                                usageItems.map((item) => (
                                    <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-xl">
                                        <div class="w-12 h-12 bg-white rounded-lg flex items-center justify-center shadow-sm flex-shrink-0">
                                            <span class="material-icons text-[#f7941e] text-xl">
                                                {item.icon}
                                            </span>
                                        </div>
                                        <div>
                                            <h3 class="font-semibold text-gray-900 mb-1">
                                                {item.title}
                                            </h3>
                                            <p class="text-gray-600 text-sm">
                                                {item.desc}
                                            </p>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <!-- Section 3: Information Sharing -->
                <div id="sharing" class="scroll-mt-24 mb-12">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="w-14 h-14 bg-gradient-to-br from-[#f7941e] to-[#ff6b35] rounded-xl flex items-center justify-center shadow-lg shadow-orange-200/50"
                        >
                            <span class="material-icons text-white text-2xl"
                                >share</span
                            >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-gray-900"
                        >
                            Information Sharing
                        </h2>
                    </div>
                    <div class="bg-white rounded-2xl shadow-lg p-8">
                        <p class="text-gray-600 mb-6">
                            We may share your information with trusted third
                            parties to help us provide and improve our services:
                        </p>

                        <div class="space-y-4">
                            {
                                sharingItems.map((item) => (
                                    <div class="flex items-start gap-4 p-4 border border-gray-200 rounded-xl hover:border-[#f7941e]/30 transition-colors">
                                        <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center flex-shrink-0">
                                            <span class="material-icons text-gray-600">
                                                {item.icon}
                                            </span>
                                        </div>
                                        <div>
                                            <h4 class="font-semibold text-gray-900">
                                                {item.title}
                                            </h4>
                                            <p class="text-gray-600 text-sm">
                                                {item.desc}
                                            </p>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>

                        <div
                            class="mt-6 p-4 bg-gray-50 rounded-xl border border-gray-200 flex items-start gap-3"
                        >
                            <span class="material-icons text-gray-600"
                                >info</span
                            >
                            <p class="text-gray-600 text-sm">
                                We never sell your personal information to third
                                parties for marketing purposes.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Section 4: Your Rights -->
                <div id="your-rights" class="scroll-mt-24 mb-12">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="w-14 h-14 bg-gradient-to-br from-[#f7941e] to-[#ff6b35] rounded-xl flex items-center justify-center shadow-lg shadow-orange-200/50"
                        >
                            <span class="material-icons text-white text-2xl"
                                >verified_user</span
                            >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-gray-900"
                        >
                            Your Rights
                        </h2>
                    </div>
                    <div class="bg-white rounded-2xl shadow-lg p-8">
                        <p class="text-gray-600 mb-6">
                            You have the following rights regarding your
                            personal information:
                        </p>

                        <div class="grid sm:grid-cols-2 gap-4 mb-6">
                            {
                                rightsItems.map((item) => (
                                    <div class="flex items-center gap-3 p-4 border border-gray-200 rounded-xl">
                                        <span class="material-icons text-[#f7941e]">
                                            {item.icon}
                                        </span>
                                        <div>
                                            <span class="font-semibold text-gray-900 block">
                                                {item.title}
                                            </span>
                                            <span class="text-sm text-gray-500">
                                                {item.desc}
                                            </span>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>

                        <div
                            class="p-4 bg-gray-50 rounded-xl border border-gray-200 mb-6"
                        >
                            <h4
                                class="font-semibold text-gray-900 mb-2 flex items-center gap-2"
                            >
                                <span
                                    class="material-icons text-gray-600 text-lg"
                                    >public</span
                                >
                                For EU Residents (GDPR)
                            </h4>
                            <p class="text-gray-600 text-sm">
                                If you are a resident of the European Economic
                                Area, you have additional rights under GDPR.
                                Please note that your information may be
                                transferred outside of Europe, including to
                                Canada.
                            </p>
                        </div>

                        <div
                            class="p-4 bg-gray-50 rounded-xl border border-gray-200"
                        >
                            <h4
                                class="font-semibold text-gray-900 mb-2 flex items-center gap-2"
                            >
                                <span
                                    class="material-icons text-gray-600 text-lg"
                                    >schedule</span
                                >
                                Data Retention
                            </h4>
                            <p class="text-gray-600 text-sm">
                                We retain your booking information for our
                                records unless you request deletion. Device
                                information is typically retained for up to 2
                                years for analytics purposes.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Section 5: Contact Us -->
                <div id="contact" class="scroll-mt-24 mb-12">
                    <div class="flex items-center gap-4 mb-6">
                        <div
                            class="w-14 h-14 bg-gradient-to-br from-[#f7941e] to-[#ff6b35] rounded-xl flex items-center justify-center shadow-lg shadow-orange-200/50"
                        >
                            <span class="material-icons text-white text-2xl"
                                >mail</span
                            >
                        </div>
                        <h2
                            class="text-2xl md:text-3xl font-bold text-gray-900"
                        >
                            Contact Us
                        </h2>
                    </div>
                    <div class="bg-white rounded-2xl shadow-lg p-8">
                        <p class="text-gray-600 mb-6">
                            For questions about our privacy practices, to
                            exercise your rights, or to make a complaint, please
                            contact us:
                        </p>

                        <div class="grid md:grid-cols-2 gap-6 mb-6">
                            <a
                                href="mailto:info@qualitour.ca"
                                class="flex items-center gap-4 p-4 border border-gray-200 rounded-xl hover:border-[#f7941e] hover:bg-orange-50/50 transition-all group"
                            >
                                <div
                                    class="w-12 h-12 bg-gray-100 group-hover:bg-[#f7941e] rounded-xl flex items-center justify-center transition-colors"
                                >
                                    <span
                                        class="material-icons text-gray-600 group-hover:text-white transition-colors"
                                        >email</span
                                    >
                                </div>
                                <div>
                                    <span
                                        class="font-semibold text-gray-900 block"
                                        >Email</span
                                    >
                                    <span class="text-[#f7941e]"
                                        >info@qualitour.ca</span
                                    >
                                </div>
                            </a>

                            <a
                                href="tel:+17789456000"
                                class="flex items-center gap-4 p-4 border border-gray-200 rounded-xl hover:border-[#f7941e] hover:bg-orange-50/50 transition-all group"
                            >
                                <div
                                    class="w-12 h-12 bg-gray-100 group-hover:bg-[#f7941e] rounded-xl flex items-center justify-center transition-colors"
                                >
                                    <span
                                        class="material-icons text-gray-600 group-hover:text-white transition-colors"
                                        >phone</span
                                    >
                                </div>
                                <div>
                                    <span
                                        class="font-semibold text-gray-900 block"
                                        >Phone</span
                                    >
                                    <span class="text-[#f7941e]"
                                        >(778) 945-6000</span
                                    >
                                </div>
                            </a>
                        </div>

                        <div
                            class="p-6 bg-gray-50 rounded-xl border border-gray-200"
                        >
                            <h4
                                class="font-semibold text-gray-900 mb-2 flex items-center gap-2"
                            >
                                <span class="material-icons text-gray-600"
                                    >location_on</span
                                >
                                Mailing Address
                            </h4>
                            <p class="text-gray-600">
                                Qualitour Travel & Tour Experiences<br />
                                5635 Cambie Street<br />
                                Vancouver, BC V5Z 3A3<br />
                                Canada
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Policy Updates Notice -->
                <div
                    class="bg-white rounded-2xl p-6 text-center border border-gray-200"
                >
                    <p class="text-gray-500 text-sm">
                        We may update this privacy policy from time to time. Any
                        changes will be posted on this page with an updated
                        revision date.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div
                class="max-w-4xl mx-auto bg-gradient-to-br from-gray-900 to-gray-800 rounded-3xl p-10 md:p-16 text-center relative overflow-hidden"
            >
                <!-- Decorative elements -->
                <div
                    class="absolute top-0 left-0 w-40 h-40 bg-[#f7941e]/20 rounded-full blur-3xl"
                >
                </div>
                <div
                    class="absolute bottom-0 right-0 w-60 h-60 bg-[#f7941e]/10 rounded-full blur-3xl"
                >
                </div>

                <div class="relative z-10">
                    <div
                        class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-[#f7941e] to-[#ff6b35] rounded-2xl flex items-center justify-center shadow-lg shadow-orange-500/30"
                    >
                        <span class="material-icons text-white text-4xl"
                            >help_outline</span
                        >
                    </div>

                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                        Have Questions About Your Privacy?
                    </h2>
                    <p class="text-white/70 text-lg mb-8 max-w-xl mx-auto">
                        We're here to help. Reach out to our team for any
                        privacy-related concerns.
                    </p>

                    <div class="flex flex-wrap justify-center gap-4">
                        <a
                            href={`${localePrefix}/contact`}
                            class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-[#f7941e] to-[#ff6b35] text-white font-bold rounded-full hover:shadow-2xl hover:shadow-orange-500/30 hover:scale-105 transition-all duration-300"
                        >
                            <span class="material-icons">mail</span>
                            Contact Us
                        </a>
                        <a
                            href="tel:+17789456000"
                            class="inline-flex items-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-bold rounded-full border border-white/20 hover:bg-white/20 transition-all duration-300"
                        >
                            <span class="material-icons">call</span>
                            +1 (778) 945-6000
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
