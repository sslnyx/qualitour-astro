---
import Layout from "../../layouts/Layout.astro";
import PageHero from "../../components/PageHero.astro";
import { type Locale } from "../../i18n/config";
import { ContactForm } from "../../components/forms";

// Generate paths for both locales
export function getStaticPaths() {
    return [
        { params: { lang: undefined } }, // English: /contact
        { params: { lang: "zh" } }, // Chinese: /zh/contact
    ];
}

const { lang } = Astro.params;
const currentLang: Locale = (lang as Locale) || "en";
const localePrefix = currentLang === "en" ? "" : `/${currentLang}`;

// Translation helpers
const t = {
    title: currentLang === "zh" ? "联系我们" : "Get in Touch",
    subtitle:
        currentLang === "zh"
            ? "我们要在这里为您提供帮助"
            : "We'd love to hear from you. Here is how you can reach us.",
    formTitle: currentLang === "zh" ? "给我们发信息" : "Send us a Message",
    formDesc:
        currentLang === "zh"
            ? "有疑问吗？请填写下面的表格。"
            : "Have a question about a tour or need a custom itinerary? Fill out the form below.",
    phone: currentLang === "zh" ? "电话" : "Phone",
    phoneHours:
        currentLang === "zh"
            ? "周一至周五 9am-6pm PST"
            : "Mon-Fri from 9am to 6pm PST",
    emailLabel: currentLang === "zh" ? "电子邮件" : "Email",
    emailDesc:
        currentLang === "zh"
            ? "我们会在24小时内回复"
            : "Our team will respond within 24 hours",
    office: currentLang === "zh" ? "办公室" : "Office",
    officeDesc:
        currentLang === "zh"
            ? "欢迎来我们的办公室"
            : "Come say hello at our office headquarters",
    quickQuestion:
        currentLang === "zh" ? "有快速问题？" : "Have a quick question?",
    quickQuestionDesc:
        currentLang === "zh"
            ? "您可能在常见问题中找到答案。"
            : "You might find the answer you're looking for in our Frequently Asked Questions.",
    visitFaq: currentLang === "zh" ? "访问FAQ页面" : "Visit FAQ Page",
    privacyPolicy: currentLang === "zh" ? "隐私政策" : "Privacy Policy",
    privacyAgree:
        currentLang === "zh"
            ? "提交此表格即表示您同意我们的"
            : "By submitting this form, you agree to our",
};
---

<Layout
    title={`${t.title} | Qualitour`}
    description={currentLang === "zh"
        ? "联系温哥华Qualitour。有关旅游、接送或签证服务的咨询，请致电、发邮件或访问我们的办公室。"
        : "Contact Qualitour in Vancouver. Call us, email, or visit our office for inquiries about tours, transfers, or visa services."}
    lang={currentLang}
    image="/contact-hero.png"
>
    <!-- Hero Section -->
    <PageHero
        image="/contact-hero.png"
        title={t.title}
        subtitle={t.subtitle}
        align="left"
        badge={{
            icon: "contact_support",
            text: currentLang === "zh" ? "联系我们" : "Contact Us",
        }}
    />

    <!-- Split Content Section -->
    <section class="py-12 md:py-20 relative z-10 -mt-10 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 md:gap-12">
                <!-- Left Column: Contact Info -->
                <div class="lg:col-span-5 space-y-6">
                    <!-- Contact Cards -->
                    <div
                        class="bg-white rounded-2xl shadow-lg p-8 transform transition-transform hover:-translate-y-1 duration-300 border-l-4 border-[#f7941e]"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 bg-orange-50 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <span class="material-icons text-[#f7941e]"
                                    >phone</span
                                >
                            </div>
                            <div>
                                <h3
                                    class="text-lg font-bold text-gray-900 mb-1"
                                >
                                    {t.phone}
                                </h3>
                                <p class="text-gray-500 text-sm mb-3">
                                    {t.phoneHours}
                                </p>
                                <a
                                    href="tel:+17789456000"
                                    class="text-xl font-semibold text-gray-800 hover:text-[#f7941e] transition-colors"
                                >
                                    +1 (778) 945-6000
                                </a>
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-white rounded-2xl shadow-lg p-8 transform transition-transform hover:-translate-y-1 duration-300 border-l-4 border-[#f7941e]"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 bg-orange-50 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <span class="material-icons text-[#f7941e]"
                                    >mail</span
                                >
                            </div>
                            <div>
                                <h3
                                    class="text-lg font-bold text-gray-900 mb-1"
                                >
                                    {t.emailLabel}
                                </h3>
                                <p class="text-gray-500 text-sm mb-3">
                                    {t.emailDesc}
                                </p>
                                <a
                                    href="mailto:info@qualitour.ca"
                                    class="text-xl font-semibold text-gray-800 hover:text-[#f7941e] transition-colors break-all"
                                >
                                    info@qualitour.ca
                                </a>
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-white rounded-2xl shadow-lg p-8 transform transition-transform hover:-translate-y-1 duration-300 border-l-4 border-[#f7941e]"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 bg-orange-50 rounded-full flex items-center justify-center flex-shrink-0"
                            >
                                <span class="material-icons text-[#f7941e]"
                                    >location_on</span
                                >
                            </div>
                            <div>
                                <h3
                                    class="text-lg font-bold text-gray-900 mb-1"
                                >
                                    {t.office}
                                </h3>
                                <p class="text-gray-500 text-sm mb-3">
                                    {t.officeDesc}
                                </p>
                                <address
                                    class="text-lg text-gray-800 not-italic font-medium"
                                >
                                    8283 Granville St<br />
                                    Vancouver, BC V6P 4Z6<br />
                                    Canada
                                </address>
                            </div>
                        </div>
                    </div>

                    <!-- FAQ Teaser -->
                    <div
                        class="bg-[#f7941e]/5 rounded-2xl p-8 border border-[#f7941e]/20 mt-8"
                    >
                        <h3 class="text-lg font-bold text-gray-900 mb-2">
                            {t.quickQuestion}
                        </h3>
                        <p class="text-gray-600 mb-4 text-sm">
                            {t.quickQuestionDesc}
                        </p>
                        <a
                            href={`${localePrefix}/faq`}
                            class="text-[#f7941e] font-semibold hover:underline flex items-center gap-1 text-sm"
                        >
                            {t.visitFaq}
                            <span class="material-icons text-sm"
                                >arrow_forward</span
                            >
                        </a>
                    </div>
                </div>

                <!-- Right Column: Contact Form -->
                <div class="lg:col-span-7">
                    <div
                        class="bg-white rounded-3xl shadow-2xl overflow-hidden"
                    >
                        <div class="p-8 md:p-12">
                            <h2 class="text-3xl font-bold text-gray-900 mb-2">
                                {t.formTitle}
                            </h2>
                            <p class="text-gray-500 mb-8">{t.formDesc}</p>

                            <ContactForm className="!max-w-full" client:load />

                            <p class="text-xs text-center text-gray-400 mt-8">
                                {t.privacyAgree}
                                <a
                                    href={`${localePrefix}/privacy-policy`}
                                    class="underline hover:text-gray-600"
                                    >{t.privacyPolicy}</a
                                >.
                            </p>
                        </div>
                        <div
                            class="bg-gray-50 px-8 py-6 border-t border-gray-100 flex items-center justify-between text-sm text-gray-500"
                        >
                            <span class="flex items-center gap-2">
                                <span
                                    class="material-icons text-green-500 text-base"
                                    >lock</span
                                >
                                {
                                    currentLang === "zh"
                                        ? "安全 SSL 连接"
                                        : "Secure SSL Connection"
                                }
                            </span>
                            <span
                                >Qualitour &copy; {
                                    new Date().getFullYear()
                                }</span
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="h-[500px] w-full relative z-0">
        <iframe
            width="100%"
            height="100%"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2602.9652944451893!2d-123.17161!3d49.26!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5486d0c5c5c5c5cd%3A0x0!2s8283%20Granville%20St%2C%20Vancouver%2C%20BC%20V6P%204Z6!5e0!3m2!1sen!2sca"
            style="border: 0; filter: grayscale(100%) contrast(1.2) brightness(0.9);"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full h-full grayscale hover:grayscale-0 transition-all duration-700"
        ></iframe>
        <div
            class="absolute top-0 inset-x-0 h-24 bg-gradient-to-b from-gray-50 to-transparent pointer-events-none"
        >
        </div>
    </section>
</Layout>
