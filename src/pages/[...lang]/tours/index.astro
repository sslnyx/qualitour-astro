---
import Layout from "../../../layouts/Layout.astro";
import {
  getTours,
  getSiteNavData,
  getTourDurations,
  getTourTypes,
} from "../../../lib/wordpress/api";
import { type Locale } from "../../../i18n/config";
import { ToursGrid } from "../../../components/ToursGrid";
import { TourFilterSidebarClient } from "../../../components/TourFilterSidebarClient";

// Generate paths for both locales
export function getStaticPaths() {
  return [
    { params: { lang: undefined } }, // English: /tours
    { params: { lang: "zh" } }, // Chinese: /zh/tours
  ];
}

const { lang: langParam } = Astro.params;
const lang: Locale = (langParam as Locale) || "en";
const localePrefix = lang === "en" ? "" : `/${lang}`;

// Fetch all tours and filter data at build time
// Client-side filtering will handle URL params
const [tours, navData] = await Promise.all([
  getTours({ per_page: 1000 }, lang),
  getSiteNavData(lang),
]);
const { durations, types } = navData;
---

<Layout
  title={lang === "zh" ? "所有行程 | Qualitour" : "All Tours | Qualitour"}
  description={lang === "zh"
    ? "探索我们精心策划的高端旅游行程。从文化冒险到自然奇观，寻找您的完美旅程。"
    : "Explore our curated collection of premium tours. From cultural adventures to scenic wonders, find your perfect journey."}
  lang={lang}
>
  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-gradient-to-r from-gray-900 to-gray-800 py-16 md:py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center text-white">
          <nav class="text-sm mb-4">
            <a
              href={`${localePrefix}/`}
              class="text-gray-400 hover:text-white transition-colors"
              >{lang === "zh" ? "首页" : "Home"}</a
            >
            <span class="mx-2 text-gray-600">/</span>
            <span class="text-orange-400"
              >{lang === "zh" ? "行程" : "Tours"}</span
            >
          </nav>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
            {lang === "zh" ? "探索我们的行程" : "Explore Our Tours"}
          </h1>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            {
              lang === "zh"
                ? "在我们最精彩的目的地中发现难忘的旅程"
                : "Discover unforgettable journeys through our most remarkable destinations"
            }
          </p>
        </div>
      </div>
    </section>

    <!-- Tours Content with Sidebar -->
    <section class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col lg:flex-row gap-8">
          <!-- Filter Sidebar - Component handles desktop sidebar & mobile drawer -->
          <TourFilterSidebarClient
            client:load
            destinations={navData.destinations}
            durations={durations}
            types={types}
            lang={lang}
          />

          <!-- Main Content - React Client Component -->
          <ToursGrid
            client:load
            tours={tours}
            destinations={navData.destinations}
            durations={durations}
            types={types}
            lang={lang}
          />
        </div>
      </div>
    </section>

    <!-- Explore by Destination -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <span
            class="text-orange-500 font-medium text-sm uppercase tracking-wider"
          >
            {lang === "zh" ? "浏览行程" : "Browse Tours"}
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">
            {lang === "zh" ? "按目的地探索" : "Explore by Destination"}
          </h2>
        </div>

        <div
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4"
        >
          {
            navData.destinations.map((dest) => (
              <a
                href={`${localePrefix}/tours?destination=${dest.slug}`}
                class="group p-4 bg-gray-50 rounded-xl hover:bg-orange-50 border border-gray-100 hover:border-orange-200 transition-all text-center"
              >
                <span class="material-icons text-2xl text-gray-400 group-hover:text-orange-500 mb-2 block">
                  location_on
                </span>
                <h3 class="font-medium text-gray-900 group-hover:text-orange-600 transition-colors">
                  {dest.name}
                </h3>
                <p class="text-sm text-gray-500 mt-1">
                  {dest.count} {lang === "zh" ? "个行程" : "tours"}
                </p>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-orange-500 to-amber-500">
      <div
        class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white"
      >
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {
            lang === "zh"
              ? "找不到您想要的行程？"
              : "Can't Find What You're Looking For?"
          }
        </h2>
        <p class="text-xl opacity-90 mb-8">
          {
            lang === "zh"
              ? "让我们为您量身定制专属行程"
              : "Let us create a custom tour tailored to your preferences"
          }
        </p>
        <a
          href={`${localePrefix}/contact`}
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-orange-500 font-bold rounded-full hover:shadow-xl hover:scale-105 transition-all"
        >
          <span class="material-icons">mail</span>
          {lang === "zh" ? "联系我们" : "Contact Us"}
        </a>
      </div>
    </section>
  </main>
</Layout>

<script>
  // Handle destination links to dispatch urlchange event
  document.querySelectorAll('a[href*="?destination="]').forEach((link) => {
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const href = (e.currentTarget as HTMLAnchorElement).getAttribute("href");
      if (href) {
        window.history.pushState({}, "", href);
        window.dispatchEvent(new Event("urlchange"));
        // Scroll to tours section
        document
          .querySelector(".py-12.md\\:py-16")
          ?.scrollIntoView({ behavior: "smooth" });
      }
    });
  });
</script>
