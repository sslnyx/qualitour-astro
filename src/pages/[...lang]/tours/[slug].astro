---
import Layout from '../../../layouts/Layout.astro';
import { getTours, getTourBySlug } from '../../../lib/wordpress/api';
import { type Locale } from '../../../i18n/config';
import { TourDetail } from '../../../components/TourDetail';
import TourSidebarForm from '../../../components/TourSidebarForm';
import { wpUrl } from '../../../lib/wp-url';

// Generate static paths for all tours in all locales
export async function getStaticPaths() {
  const locales = ['en', 'zh'] as const;
  
  const paths = [];
  
  // Fetch tours for each locale separately to get locale-specific slugs
  for (const locale of locales) {
    const tours = await getTours({ per_page: 300 }, locale);
    
    for (const tour of tours) {
      // Decode the slug so it matches the browser's decoded URL format
      const decodedSlug = decodeURIComponent(tour.slug);
      paths.push({
        params: { 
          lang: locale === 'en' ? undefined : locale,
          slug: decodedSlug 
        },
        props: { tourSlug: tour.slug, tourLang: locale }
      });
    }
  }
  
  return paths;
}

// Get the tour data
const { slug, lang: langParam } = Astro.params;
const lang: Locale = (langParam as Locale) || 'en';
const localePrefix = lang === 'en' ? '' : `/${lang}`;

// Fetch tour data
let tour = null;
let error = null;

try {
  tour = await getTourBySlug(slug!, lang);
} catch (e) {
  console.error('Error fetching tour:', e);
  error = e instanceof Error ? e.message : 'Failed to load tour';
}

// Redirect if tour not found
if (!tour && !error) {
  return Astro.redirect(`${localePrefix}/tours`);
}

// Extract meta info - handle featured_image_url properly (can be string or object)
function getImageUrl(img: any): string | undefined {
  if (!img) return undefined;
  if (typeof img === 'string') return wpUrl(img);
  if (typeof img === 'object') {
    const url = img.full?.url || img.full || img.large || img.medium;
    return url ? wpUrl(url) : undefined;
  }
  return undefined;
}

const imageUrl = getImageUrl(tour?.featured_image_url);
const price = tour?.tour_meta?.price;
const duration = tour?.tour_meta?.duration_text || tour?.tour_meta?.duration;
const location = tour?.tour_meta?.location;
const country = tour?.tour_meta?.country;
const minPeople = tour?.tour_meta?.min_people;
const maxPeople = tour?.tour_meta?.max_people;
const groupSize = minPeople && maxPeople ? `${minPeople} - ${maxPeople}` : maxPeople || minPeople;
const categories = tour?.tour_terms?.categories || [];
const destinations = tour?.tour_terms?.destinations || [];
---

<Layout 
  title={tour ? `${tour.title.rendered.replace(/<[^>]*>/g, '')} | Qualitour` : 'Tour Not Found'}
  description={tour?.excerpt?.rendered?.replace(/<[^>]*>/g, '').substring(0, 160) || ''}
  lang={lang}
  image={imageUrl}
  type="article"
>
  {error ? (
    <!-- Error State -->
    <div class="min-h-screen flex items-center justify-center p-4 bg-gray-50">
      <div class="bg-white border border-red-200 rounded-2xl p-8 max-w-lg shadow-lg">
        <div class="w-16 h-16 mx-auto mb-4 bg-red-100 rounded-full flex items-center justify-center">
          <span class="material-icons text-red-500 text-3xl">error_outline</span>
        </div>
        <h2 class="text-xl font-bold text-gray-900 text-center mb-2">Error Loading Tour</h2>
        <p class="text-gray-500 text-center mb-6">{error}</p>
        <a
          href={`${localePrefix}/tours`}
          class="flex items-center justify-center gap-2 w-full py-3 bg-orange-500 text-white font-semibold rounded-xl hover:bg-orange-600 transition-colors"
        >
          <span class="material-icons">arrow_back</span>
          Back to Tours
        </a>
      </div>
    </div>
  ) : tour ? (
    <div class="min-h-screen bg-gray-50">
      <!-- Hero Section -->
      <section class="relative min-h-[50vh] md:min-h-[60vh] overflow-hidden">
        {imageUrl ? (
          <>
            <img
              src={imageUrl}
              alt={tour.title.rendered.replace(/<[^>]*>/g, '')}
              class="absolute inset-0 w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-black/20"></div>
            <div class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent"></div>
          </>
        ) : (
          <div class="absolute inset-0 bg-gradient-to-br from-gray-800 to-gray-900"></div>
        )}

        <!-- Back Button -->
        <div class="absolute top-6 left-6 z-20">
          <a
            href={`${localePrefix}/tours`}
            class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur-md text-white rounded-full border border-white/20 hover:bg-white/20 transition-all"
          >
            <span class="material-icons text-lg">arrow_back</span>
            <span class="font-medium">All Tours</span>
          </a>
        </div>

        <!-- Hero Content -->
        <div class="absolute bottom-0 left-0 right-0 z-10">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-10 md:pb-16">
            <!-- Categories/Destinations -->
            {(categories.length > 0 || destinations.length > 0) && (
              <div class="flex flex-wrap gap-2 mb-4">
                {destinations.slice(0, 1).map((dest: any) => (
                  <a
                    href={`${localePrefix}/tours/destination/${dest.slug}`}
                    class="inline-flex items-center gap-1 px-3 py-1 bg-white/20 backdrop-blur-sm text-white rounded-full text-sm font-medium hover:bg-white/30 transition-colors"
                  >
                    <span class="material-icons text-sm">location_on</span>
                    {dest.name}
                  </a>
                ))}
                {categories.slice(0, 2).map((cat: any) => (
                  <span class="inline-flex items-center gap-1 px-3 py-1 bg-orange-500/80 backdrop-blur-sm text-white rounded-full text-sm font-medium">
                    {cat.name}
                  </span>
                ))}
              </div>
            )}

            <!-- Title -->
            <h1 
              class="text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-4 max-w-4xl leading-tight drop-shadow-lg"
              set:html={tour.title.rendered}
            />

            <!-- Location -->
            {(location || country) && (
              <p class="text-lg md:text-xl text-white/80 flex items-center gap-2 mb-6">
                <span class="material-icons">place</span>
                {[location, country].filter(Boolean).join(', ')}
              </p>
            )}

            <!-- Quick Stats -->
            <div class="flex flex-wrap gap-4 md:gap-6">
              {duration && (
                <div class="flex items-center gap-2 text-white">
                  <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
                    <span class="material-icons">schedule</span>
                  </div>
                  <div>
                    <div class="text-xs text-white/60 uppercase tracking-wide">Duration</div>
                    <div class="font-semibold">{duration}</div>
                  </div>
                </div>
              )}
              {groupSize && (
                <div class="flex items-center gap-2 text-white">
                  <div class="w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
                    <span class="material-icons">groups</span>
                  </div>
                  <div>
                    <div class="text-xs text-white/60 uppercase tracking-wide">Group Size</div>
                    <div class="font-semibold">{groupSize}</div>
                  </div>
                </div>
              )}
              {price && (
                <div class="flex items-center gap-2 text-white">
                  <div class="w-10 h-10 bg-orange-500 rounded-xl flex items-center justify-center">
                    <span class="material-icons">paid</span>
                  </div>
                  <div>
                    <div class="text-xs text-white/60 uppercase tracking-wide">From</div>
                    <div class="font-bold text-xl">${typeof price === 'string' ? price : price}</div>
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>

        <!-- Decorative element -->
        <div class="absolute top-20 right-20 w-64 h-64 bg-orange-500/20 rounded-full blur-3xl pointer-events-none"></div>
      </section>

      <!-- Content Section -->
      <section class="relative z-10 -mt-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-8">
              <!-- Tour Details Card (React Island) -->
              <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
                <TourDetail tour={tour} lang={lang} client:load />
              </div>

              <!-- Trust Indicators -->
              <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-100">
                <div class="flex flex-wrap items-center justify-center gap-6 md:gap-10">
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                      <span class="material-icons text-green-600">verified</span>
                    </div>
                    <div>
                      <div class="font-semibold text-gray-900">Verified Tour</div>
                      <div class="text-sm text-gray-500">Quality guaranteed</div>
                    </div>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                      <span class="material-icons text-green-600">support_agent</span>
                    </div>
                    <div>
                      <div class="font-semibold text-gray-900">24/7 Support</div>
                      <div class="text-sm text-gray-500">Always here to help</div>
                    </div>
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                      <span class="material-icons text-green-600">credit_score</span>
                    </div>
                    <div>
                      <div class="font-semibold text-gray-900">Secure Booking</div>
                      <div class="text-sm text-gray-500">Safe payments</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
              <div class="sticky top-24">
                <TourSidebarForm
                  tourId={tour.id}
                  tourTitle={tour.title.rendered.replace(/<[^>]*>/g, '')}
                  price={price}
                  duration={duration}
                  groupSize={groupSize ? `${groupSize} people` : undefined}
                  categories={categories}
                  client:load
                />
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- CTA Section -->
      <section class="py-16 mt-16 bg-gradient-to-r from-orange-500 to-amber-500 relative overflow-hidden">
        <div class="absolute inset-0 opacity-10 bg-[radial-gradient(circle_at_center,#fff_1px,transparent_1px)] [background-size:24px_24px]"></div>
        
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
          <div class="max-w-3xl mx-auto text-center text-white">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Ready to Start Your Adventure?
            </h2>
            <p class="text-xl opacity-90 mb-8">
              Book this tour now or contact us for a custom itinerary
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <a
                href={`${localePrefix}/contact?tour=${encodeURIComponent(tour.title.rendered.replace(/<[^>]*>/g, ''))}`}
                class="inline-flex items-center gap-2 px-8 py-4 bg-white text-orange-500 font-bold rounded-full hover:shadow-xl hover:scale-105 transition-all"
              >
                <span class="material-icons">mail</span>
                Send Inquiry
              </a>
              <a
                href="tel:+17789456000"
                class="inline-flex items-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-bold rounded-full border border-white/30 hover:bg-white/20 transition-all"
              >
                <span class="material-icons">call</span>
                +1 (778) 945-6000
              </a>
            </div>
          </div>
        </div>
      </section>
    </div>
  ) : (
    <div class="min-h-screen flex items-center justify-center">
      <p class="text-gray-500">Tour not found</p>
    </div>
  )}
</Layout>
