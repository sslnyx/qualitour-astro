---
import Layout from "../../layouts/Layout.astro";
import { getTours, getSiteNavData } from "../../lib/wordpress/api";
import { getCurrentLocale } from "../../i18n/config";
import { TourCard } from "../../components/TourCard";

const lang = getCurrentLocale(Astro.url);
const localePrefix = lang === "en" ? "" : `/${lang}`;

// Fetch tours and filter data
const [tours, navData] = await Promise.all([
  getTours({ per_page: 100 }, lang),
  getSiteNavData(lang),
]);

// Get filter params from URL
const url = new URL(Astro.request.url);
const destinationSlug = url.searchParams.get("destination");
const typeSlug = url.searchParams.get("type");
const searchQuery = url.searchParams.get("q");

// Filter tours (simple client-side filtering since this is SSG)
let filteredTours = tours;

// Page title
let pageTitle = "All Tours";
---

<Layout
  title={`${pageTitle} | Qualitour`}
  description="Explore our curated collection of premium China tours. From cultural adventures to scenic wonders, find your perfect journey."
  lang={lang}
>
  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-gradient-to-r from-gray-900 to-gray-800 py-16 md:py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center text-white">
          <nav class="text-sm mb-4">
            <a
              href={`${localePrefix}/`}
              class="text-gray-400 hover:text-white transition-colors">Home</a
            >
            <span class="mx-2 text-gray-600">/</span>
            <span class="text-orange-400">Tours</span>
          </nav>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
            Explore Our Tours
          </h1>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Discover unforgettable journeys through China's most remarkable
            destinations
          </p>
        </div>
      </div>
    </section>

    <!-- Tours Grid -->
    <section class="py-12 md:py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Results Count -->
        <div
          class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-8"
        >
          <p class="text-gray-600">
            Showing <span class="font-semibold text-gray-900"
              >{filteredTours.length}</span
            > tours
          </p>

          <!-- Quick Filter Links -->
          <div class="flex flex-wrap gap-2">
            {
              navData.destinations.slice(0, 5).map((dest) => (
                <a
                  href={`${localePrefix}/tours/destination/${dest.slug}`}
                  class="px-3 py-1.5 text-sm bg-white border border-gray-200 text-gray-600 rounded-full hover:border-orange-300 hover:text-orange-500 transition-colors"
                >
                  {dest.name}
                </a>
              ))
            }
          </div>
        </div>

        <!-- Tour Grid -->
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
        >
          {filteredTours.map((tour) => <TourCard tour={tour} lang={lang} />)}
        </div>

        {/* Empty State */}
        {
          filteredTours.length === 0 && (
            <div class="text-center py-16">
              <span class="material-icons text-6xl text-gray-300 mb-4">
                search_off
              </span>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">
                No tours found
              </h3>
              <p class="text-gray-500 mb-6">
                Try adjusting your filters or search criteria
              </p>
              <a
                href={`${localePrefix}/tours`}
                class="inline-flex items-center gap-2 px-6 py-3 bg-orange-500 text-white font-semibold rounded-full hover:bg-orange-600 transition-colors"
              >
                View All Tours
              </a>
            </div>
          )
        }
      </div>
    </section>

    <!-- Explore by Destination -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <span
            class="text-orange-500 font-medium text-sm uppercase tracking-wider"
          >
            Browse Tours
          </span>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">
            Explore by Destination
          </h2>
        </div>

        <div
          class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4"
        >
          {
            navData.destinations.map((dest) => (
              <a
                href={`${localePrefix}/tours/destination/${dest.slug}`}
                class="group p-4 bg-gray-50 rounded-xl hover:bg-orange-50 border border-gray-100 hover:border-orange-200 transition-all text-center"
              >
                <span class="material-icons text-2xl text-gray-400 group-hover:text-orange-500 mb-2 block">
                  location_on
                </span>
                <h3 class="font-medium text-gray-900 group-hover:text-orange-600 transition-colors">
                  {dest.name}
                </h3>
                <p class="text-sm text-gray-500 mt-1">{dest.count} tours</p>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gradient-to-r from-orange-500 to-amber-500">
      <div
        class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white"
      >
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Can't Find What You're Looking For?
        </h2>
        <p class="text-xl opacity-90 mb-8">
          Let us create a custom tour tailored to your preferences
        </p>
        <a
          href={`${localePrefix}/contact`}
          class="inline-flex items-center gap-2 px-8 py-4 bg-white text-orange-500 font-bold rounded-full hover:shadow-xl hover:scale-105 transition-all"
        >
          <span class="material-icons">mail</span>
          Contact Us
        </a>
      </div>
    </section>
  </main>
</Layout>
