---
import type { SiteNavData } from "../lib/wordpress/api";
import { type Locale } from "../i18n/config";
import { Image, Picture } from "astro:assets";
import heroBackground from "../assets/hero-background.webp";

interface Props {
    lang: Locale;
    localePrefix: string;
    navData: SiteNavData;
    t: {
        heroTagline: string;
        heroTitle: string;
        heroSubtitle: string;
        searchPlaceholder: string;
        search: string;
        destination: string;
        happyTravelers: string;
        tourPackages: string;
        customerRating: string;
    };
}

const { lang, localePrefix, navData, t } = Astro.props;
---

<!-- Hero Section - Premium Dark Theme -->
<section class="relative min-h-[85vh] flex items-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <!-- Responsive hero image: mobile (640px, 25KB) vs desktop (1920px, 135KB) -->
    <Picture
        src={heroBackground}
        widths={[640, 1280, 1920]}
        sizes="(max-width: 768px) 100vw, 1920px"
        formats={["webp", "avif"]}
        alt="Scenic Canadian landscape"
        class="absolute inset-0 w-full h-full object-cover object-bottom"
        style="z-index: -2;"
        fetchpriority="high"
        loading="eager"
        decoding="async"
    />
    <div
        class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/60 to-black/40"
        style="z-index: -1;"
    >
    </div>

    <!-- Decorative elements -->
    <div
        class="absolute top-20 right-20 w-96 h-96 bg-orange-500/20 rounded-full blur-3xl"
    >
    </div>
    <div
        class="absolute bottom-40 left-10 w-64 h-64 bg-orange-500/10 rounded-full blur-3xl"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 py-20">
        <div class="max-w-3xl">
            <span
                class="inline-flex items-center gap-2 px-4 py-2 bg-orange-500/20 backdrop-blur-sm rounded-full text-orange-400 text-sm font-bold tracking-widest mb-6"
            >
                <span class="material-icons text-lg">public</span>
                {t.heroTagline}
            </span>

            {
                /* Hero Title - Using SVG to avoid loading Kaushan Script font (~35KB) */
            }
            <img
                src={lang === "en"
                    ? "/explore-again.svg?v=2"
                    : "/explore-again-zh.svg?v=2"}
                alt={t.heroTitle}
                class="h-16 md:h-24 lg:h-32 mb-6 drop-shadow-lg"
                width={lang === "en" ? "435" : "484"}
                height={lang === "en" ? "96" : "115"}
                loading="eager"
            />

            <p class="text-xl md:text-2xl text-white/80 mb-10 leading-relaxed">
                {t.heroSubtitle}
            </p>

            <!-- Search Bar -->
            <form
                class="bg-white/10 backdrop-blur-md rounded-2xl p-2 flex flex-col md:flex-row items-center gap-2 border border-white/20"
                action={`${localePrefix}/tours`}
                method="GET"
            >
                <div class="relative grow w-full md:w-auto">
                    <label for="hero-search" class="sr-only"
                        >{t.searchPlaceholder}</label
                    >
                    <span
                        class="material-icons absolute left-4 top-1/2 -translate-y-1/2 text-white/50"
                        aria-hidden="true">search</span
                    >
                    <input
                        id="hero-search"
                        type="text"
                        name="q"
                        placeholder={t.searchPlaceholder}
                        class="w-full pl-12 pr-4 py-4 bg-transparent text-white placeholder-white/50 focus:outline-none"
                    />
                </div>
                <div class="relative w-full md:w-auto">
                    <label for="hero-destination" class="sr-only"
                        >{t.destination}</label
                    >
                    <select
                        id="hero-destination"
                        name="destination"
                        class="w-full md:w-52 px-4 py-4 text-white bg-white/10 rounded-xl focus:outline-none appearance-none cursor-pointer"
                    >
                        <option value="" class="text-gray-900"
                            >{t.destination}</option
                        >
                        {
                            navData.destinations
                                .filter((d) => d.parent === 0)
                                .slice(0, 10)
                                .map((dest) => (
                                    <option
                                        value={dest.slug}
                                        class="text-gray-900"
                                    >
                                        {dest.name}
                                    </option>
                                ))
                        }
                    </select>
                    <span
                        class="material-icons absolute right-3 top-1/2 -translate-y-1/2 text-white/50 pointer-events-none"
                        >expand_more</span
                    >
                </div>
                <button
                    type="submit"
                    class="w-full md:w-auto px-8 py-4 bg-gradient-to-r from-orange-500 to-amber-500 text-white font-bold rounded-xl hover:shadow-lg hover:shadow-orange-500/30 transition-all"
                >
                    <span class="flex items-center justify-center gap-2">
                        <span class="material-icons">search</span>
                        {t.search}
                    </span>
                </button>
            </form>

            <!-- Quick Stats -->
            <div class="flex flex-wrap gap-8 mt-10 items-center">
                <div class="text-white/90">
                    <span class="text-3xl font-bold text-orange-400">500+</span>
                    <p class="text-white/60 text-sm">{t.happyTravelers}</p>
                </div>
                <div class="text-white/90">
                    <span class="text-3xl font-bold text-orange-400">50+</span>
                    <p class="text-white/60 text-sm">{t.tourPackages}</p>
                </div>
                <div class="text-white/90">
                    <div class="flex gap-1 min-h-[35.5px] items-center">
                        {
                            [1, 2, 3, 4, 5].map(() => (
                                <span class="material-icons text-2xl text-orange-400">
                                    star
                                </span>
                            ))
                        }
                        <!-- <span class="material-icons text-2xl text-orange-400/50"
              >star_half</span
            > -->
                    </div>
                    <p class="text-white/60 text-sm">{t.customerRating}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll indicator -->
    <div
        class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white/50 animate-bounce"
    >
        <span class="material-icons text-3xl">keyboard_arrow_down</span>
    </div>
</section>
